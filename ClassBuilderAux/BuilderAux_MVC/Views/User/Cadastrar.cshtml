@model UsuarioModel

@{
    ViewData["Title"] = "Casdatro";
}

<div class="text-center">
    <h1 class="display-4">Cadastro de Usuários</h1>
     
</div>
 

<form asp-controller="User" asp-action="Cadastrar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Digite seu numero de telefone">
        @Html.ValidationMessageFor(x => x.Phone)
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Digite sua senha">
    </div>
    <br />
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg">Feito</button>
        <a class="btn btn-secondary btn-lg" asp-controller="User" asp-action="Index" role="button">Voltar</a>
    </div>
    
</form>